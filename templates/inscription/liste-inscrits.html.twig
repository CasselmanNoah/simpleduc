{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste des inscrits{% endblock %}

{% block body %}
<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold"> Liste des inscrits</h1>
<div class="container-fluid">

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Nom</th>
                            <th scope="col">Pr√©nom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Date d'envoi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inscrit in inscription %}
                        <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                            <td>{{ inscrit.nom | capitalize }}</td>
                            <td>{{ inscrit.prenom | capitalize }}</td>
                            <td>{{ inscrit.email | lower }}</td>

                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}