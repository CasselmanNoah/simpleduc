{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Profil{% endblock %}

{% block body %}
<h4 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Mon Profil</h4>

<div class="card">
    <img src="https://th.bing.com/th/id/OIP.8pQGc1uvCGFkeniunEv1rwHaHa?w=203&h=203&c=7&r=0&o=5&dpr=1.25&pid=1.7" alt="Profil" style="width:100%">
    <h1>{{ app.user.prenom }} {{ app.user.nom }}</h1>

    <p class="title">Email :{{ app.user.email }}</p>
    {% if  app.user.roles[0] == "ROLE_GERANT" %}
    <p class="title">Rôle : Gérant</p>
    {% endif %}
    {% if  app.user.roles[0] == "ROLE_DEV" %}
    <p class="title">Rôle : Developeur</p>
    {% endif %}
    {% if  app.user.roles[0] == "ROLE_RESPONSABLE" %}
    <p class="title">Rôle : Responsable</p>
    {% endif %}

    <a href="{{path('ficheclient')}}">
        <button>Mes Fiches de paies</button>
    </a>
    </br>
    <a href="{{path('projet')}}">
        <button>Créer nouveau projet</button>
    </a>
</div>
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    button {
        transition-duration: 0.4s;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }
</style>

{% endblock %}


